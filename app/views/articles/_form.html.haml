= form_with model: @article do |f|
  - @article.errors.full_messages_for(:title).each do |message|
    .div
      = message
  
  - @article.errors.full_messages_for(:author).each do |message|
    .div
      = message
  
  - @article.errors.full_messages_for(:content).each do |message|
    .div
      = message

  = f.label :title
  = f.text_field :title
  %br
  
  = f.label :author
  = f.text_field :author
  %br

  = f.label :content
  = f.text_area :content
  %br

  = f.submit

